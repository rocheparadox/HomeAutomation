<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/appliance_name_text1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="@string/appliance1" />

            <TextView
                android:id="@+id/appliance_name_text2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/appliance2"/>

            <TextView
                android:id="@+id/appliance_name_text3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/appliance3"/>

            <TextView
                android:id="@+id/appliance_name_text4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/appliance4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/appliance_button1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:onClick="applianceButtonClick"
                android:layout_marginTop="100dp"
                android:text="@string/on"/>

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/appliance_button2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:onClick="applianceButtonClick"
                android:text="@string/on" />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/appliance_button3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:onClick="applianceButtonClick"
                android:text="@string/on" />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/appliance_button4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:onClick="applianceButtonClick"
                android:text="@string/on" />

        </LinearLayout>


    </LinearLayout>




</android.support.constraint.ConstraintLayout>